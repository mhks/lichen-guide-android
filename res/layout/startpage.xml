<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:background="#424242">
<RelativeLayout 

    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    
    >

    <TextView
    android:id="@+id/titleText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:textSize="50sp"
    android:text="@string/titleText" 
    android:textColor="#FFFFFF"
    android:layout_centerHorizontal="true" 
    android:paddingBottom="40sp" 
    android:paddingTop="20sp"/>


            
                <Button android:text="Key to Genera"
        	android:id="@+id/key"
        	android:textSize="22sp"
       		android:layout_centerHorizontal="true"
       		android:layout_below="@+id/titleText" 
            android:layout_width="200sp" 
            android:layout_height="wrap_content"/>
            
            
             <Button android:text="Species Index"
        	android:id="@+id/index"
        	android:textSize="22sp"
       		android:layout_centerHorizontal="true"
            android:layout_below="@+id/key" 
            android:layout_width="200sp" 
            android:layout_height="wrap_content"/>
        
            <Button android:text="Glossary"
        	android:id="@+id/glossary"
        	android:textSize="22sp"
       		android:layout_centerHorizontal="true"
            android:layout_below="@+id/index" 
            android:layout_width="200sp" 
            android:layout_height="wrap_content"/>
            
            <Button android:text="About"
        	android:id="@+id/about"
        	android:textSize="22sp"
       		android:layout_centerHorizontal="true"
            android:layout_below="@+id/glossary" 
            android:layout_width="200sp" 
            android:layout_height="wrap_content"/>
            

</RelativeLayout>
</ScrollView>